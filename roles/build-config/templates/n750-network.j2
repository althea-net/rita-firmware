
config interface 'loopback'
        option ifname 'lo'
        option proto 'static'
        option ipaddr '127.0.0.1'
        option netmask '255.0.0.0'

config globals 'globals'
        option ula_prefix 'fd3c:8a76:b02c::/48'

config interface 'backhaul'
        option ifname 'eth0.2'
        option proto 'dhcp'
        option ip6assign '60'
config device 'backhaul_dev'
        option name 'eth0.2'
        option macaddr '00:90:a9:ad:b7:b0'

config interface 'backhaul6'
	option ifname '@backhaul'
	option proto 'dhcpv6'

config interface 'lan'
        option type 'bridge'
        option ifname 'eth0.1'
        option proto 'static'
        option ipaddr '{{lan_ip}}'
        option netmask '255.255.255.0'
        option ip6assign '60'


{% for interface in listen_interfaces %}
config interface 'rita_{{interface | replace(".","")}}'
        option ifname {{interface}}
        option proto static
{% endfor %}
config switch
        option name 'switch0'
        option reset '1'
        option enable_vlan '1'
config switch_vlan
        option device 'switch0'
        option vlan '1'
        option ports '1 0t'
config switch_vlan
        option device 'switch0'
        option vlan '2'
        option ports '5 0t'
config switch_vlan
        option device 'switch0'
        option vlan '3'
        option ports '4 0t'
config switch_vlan
        option device 'switch0'
        option vlan '4'
        option ports '2 0t'
config switch_vlan
        option device 'switch0'
        option vlan '5'
        option ports '3 0t'