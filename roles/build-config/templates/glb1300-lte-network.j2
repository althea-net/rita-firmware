config globals 'globals'
        option ula_prefix 'auto'

{% for interface in listen_interfaces %}
config interface 'rita_{{interface | replace(".","")}}'
        option ifname {{interface}}
        option proto static
{% endfor %}

config switch
        option name 'switch0'
        option reset '1'
        option enable_vlan '1'

config switch_vlan
        option device 'switch0'
        option vlan '3'
        option ports '3 0t'

config switch_vlan
        option device 'switch0'
        option vlan '4'
        option ports '4 0t'

config switch_vlan
        option device 'switch0'
        option vlan '2'
        option ports '5 0t'
